---
const currentPath = Astro.url.pathname;

const tabs = [
  { href: '/dashboard', label: 'Overview' },
  { href: '/dashboard/glucose', label: 'Glucose' },
  { href: '/dashboard/insulin', label: 'Insulin' },
  { href: '/dashboard/activity', label: 'Activity' },
];
---

<nav class="border-b border-stroke">
  <div class="mx-auto flex max-w-5xl gap-0 px-6">
    {
      tabs.map(tab => (
        <a
          href={tab.href}
          class:list={[
            'border-b-2 px-4 py-3 text-sm font-medium transition-colors',
            currentPath === tab.href
              ? 'border-accent text-accent'
              : 'border-transparent text-dim hover:border-stroke hover:text-subtle',
          ]}
        >
          {tab.label}
        </a>
      ))
    }
  </div>
</nav>
