---
const currentPath = Astro.url.pathname;

const tabs = [
  { href: '/dashboard', label: 'Overview' },
  { href: '/dashboard/glucose', label: 'Glucose' },
  { href: '/dashboard/activity', label: 'Activity' },
  { href: '/dashboard/running', label: 'Running' },
];
---

<nav class="border-b border-surface-overlay">
  <div class="mx-auto flex max-w-5xl gap-0 px-6">
    {
      tabs.map(tab => (
        <a
          href={tab.href}
          class:list={[
            'border-b-2 px-4 py-3 text-sm font-medium transition-colors',
            currentPath === tab.href
              ? 'border-brand-light text-brand-light'
              : 'border-transparent text-text-muted hover:border-surface-overlay hover:text-text-secondary',
          ]}
        >
          {tab.label}
        </a>
      ))
    }
  </div>
</nav>
