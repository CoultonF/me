---
import '@/styles/global.css';
import { Image } from 'astro:assets';
import { ClientRouter } from 'astro:transitions';
import profilePhoto from '@/assets/profile.jpg';

interface Props {
  title: string;
  activePath: string;
  description?: string;
}

const { title, activePath, description = 'Personal health dashboard and portfolio for Coulton Fraser' } = Astro.props;
const year = new Date().getFullYear();

const nav = [
  { href: '/', label: 'Home' },
  { href: '/dashboard', label: 'Dashboard' },
  { href: '/dashboard/glucose', label: 'Glucose' },
  { href: '/dashboard/insulin', label: 'Insulin' },
  { href: '/dashboard/activity', label: 'Activity' },
  { href: '/dashboard/races', label: 'Races' },
];
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content="/og-image.svg" />
  <meta name="twitter:card" content="summary_large_image" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <ClientRouter />

  <script is:inline>
    (function() {
      function applyTheme() {
        const saved = localStorage.getItem('theme');
        const system = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        document.documentElement.setAttribute('data-theme', saved || system);
      }
      applyTheme();
      // Re-apply after view transition swaps the DOM (before paint)
      document.addEventListener('astro:after-swap', applyTheme);
    })();
  </script>
</head>
<body class="bg-page text-body font-sans leading-[1.7] antialiased">

  <div class="sidebar-overlay fixed inset-0 bg-curtain z-40"></div>

  <aside class="sidebar fixed top-0 left-0 w-[280px] h-screen bg-panel border-r border-stroke flex flex-col pt-10 px-6 z-50 overflow-y-auto transition-transform duration-300" transition:animate="none">
    <div class="sidebar-content relative z-[1] pb-8">
      <div>
        <Image src={profilePhoto} alt="Coulton Fraser" width={80} height={80} class="size-20 rounded-full object-cover mb-4" />
      </div>
      <h1 class="text-[1.2rem] font-semibold text-heading mb-1">Coulton Fraser</h1>
      <p class="text-[0.85rem] text-subtle mb-0.5">Oil &amp; Gas Software Architect</p>
      <p class="text-[0.8rem] text-dim mb-8">Calgary, AB</p>

      <nav class="flex flex-col gap-2 mb-8">
        {nav.map(item => (
          <a
            href={item.href}
            class:list={[
              'text-[0.9rem] no-underline py-1 hover:no-underline',
              item.href === activePath
                ? 'font-semibold text-accent'
                : 'font-medium text-subtle hover:text-body',
            ]}
          >
            {item.label}
          </a>
        ))}
      </nav>

      <div class="flex items-center gap-4 mb-8">
        <div class="flex gap-4">
          <a href="https://www.linkedin.com/in/coultonf/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="text-subtle hover:text-accent hover:no-underline">
            <svg class="size-[18px] block" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
          <a href="https://github.com/coultonf" target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="text-subtle hover:text-accent hover:no-underline">
            <svg class="size-[18px] block" viewBox="0 0 24 24" fill="currentColor"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
          </a>
        </div>
        <button class="theme-toggle bg-transparent border border-stroke rounded-md cursor-pointer p-1.5 flex items-center justify-center text-subtle transition-colors duration-200 hover:text-accent hover:border-accent" aria-label="Toggle theme">
          <svg class="icon-sun size-4 block" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
          <svg class="icon-moon size-4 block" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
        </button>
      </div>
    </div>
  </aside>

  <div class="flex md:hidden sticky top-0 z-30 bg-panel border-b border-stroke px-4 py-2.5 items-center justify-between h-[60px]">
    <div class="flex items-center gap-2.5">
      <Image src={profilePhoto} alt="Coulton Fraser" width={36} height={36} class="size-9 rounded-full object-cover" />
      <div>
        <div class="text-[0.9rem] font-semibold text-heading leading-tight">Coulton Fraser</div>
        <div class="text-[0.7rem] text-subtle leading-tight">O&amp;G Software Architect</div>
      </div>
    </div>
    <div class="flex items-center gap-2">
      <button class="theme-toggle bg-transparent border border-stroke rounded-md cursor-pointer p-1.5 flex items-center justify-center text-subtle transition-colors duration-200 hover:text-accent hover:border-accent" aria-label="Toggle theme">
        <svg class="icon-sun size-4 block" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
        <svg class="icon-moon size-4 block" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
      </button>
      <button class="menu-toggle bg-transparent border-none cursor-pointer p-1.5 flex flex-col gap-[5px]" aria-label="Open menu">
        <span class="block w-[22px] h-0.5 bg-heading rounded-[1px]"></span>
        <span class="block w-[22px] h-0.5 bg-heading rounded-[1px]"></span>
        <span class="block w-[22px] h-0.5 bg-heading rounded-[1px]"></span>
      </button>
    </div>
  </div>

  <main class="ml-0 md:ml-[280px] px-5 md:px-12 pt-8 md:pt-12 pb-6 md:pb-8 max-w-[960px]" transition:animate="fade">
    <slot />
  </main>

  <footer class="ml-0 md:ml-[280px] border-t border-stroke-soft px-5 md:px-12 py-6">
    <span class="text-[0.8rem] text-ghost">&copy; {year} Coulton Fraser</span>
  </footer>

  <script>
    function initInteractions() {
      document.querySelectorAll('.menu-toggle').forEach(btn => {
        btn.addEventListener('click', () => document.body.classList.toggle('sidebar-open'));
      });
      document.querySelector('.sidebar-overlay')?.addEventListener('click', () => {
        document.body.classList.remove('sidebar-open');
      });

      document.querySelectorAll('.theme-toggle').forEach(btn => {
        btn.addEventListener('click', () => {
          const current = document.documentElement.getAttribute('data-theme');
          const next = current === 'dark' ? 'light' : 'dark';
          document.documentElement.setAttribute('data-theme', next);
          localStorage.setItem('theme', next);
        });
      });
    }

    // System theme change â€” only bind once
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
      if (!localStorage.getItem('theme')) {
        document.documentElement.setAttribute('data-theme', e.matches ? 'dark' : 'light');
      }
    });

    // Runs on initial load + every view transition navigation
    document.addEventListener('astro:page-load', initInteractions);
  </script>
</body>
</html>
